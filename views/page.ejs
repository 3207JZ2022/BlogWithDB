<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css" type="text/css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&family=Roboto:wght@100;300;400;500&display=swap" rel="stylesheet">
</head>
<body>

    <%- include("header") %>


    <div class="main-body" name="<%= currentPage %>">
        <%  var temp=currentPage.toUpperCase(); %>
        <%  if(currentPage=="compose"){ %>
            <h1 class="content-title"> <%= temp%> </h1>
             <%- include(currentPage)%>
        <% } else{ %>
             <h1 class="content-title"> <%= temp%> </h1>
             <p class="paragraph"> 
                <%- content.replace(/\n/g, "<br>")%>
            </p>
                <% if(currentPage=="home" && posts.length!=0){  %>    
                    <h1 class="post">POST</h1>

                    <% for( var i = 0; i < posts.length; i++ ) { %>
                    <div class="para">

                        <h1 class="post-title-items">   
                            <%- posts[i].title %>
                        </h1>
                        <p class="post-items">
                            <% if(posts[i].content.length>=60){  var redirect="/posts/" + posts[i]  %>
                            <%-   posts[i].content.substring(0,60) + " ..."       %>
                            <a class="more-tag" href="/posts/<%= posts[i].id %>">   more </a>
                            
                            <% } else { %>
                            <%-  posts[i].content %>
                            <% } %>
                        </p>
                    </div>
                    <% }%>


             <%} else if(currentPage=="posts"){ %>

                <% if( display.length>0) { %>
                    <div class="para">

                        <h1 class="post-title-items">   
                            <%- display[0] %>
                        </h1>
                        <p class="post-items">
                            <%- display[1]%>    
                        </p>
                    </div>
                <% }%>
            <% } } %>
        
    </div>
    <div class="compose-link">
         <a href="/compose">+</a>
    </div>
    <%- include("footer") %>

</body>
</html>